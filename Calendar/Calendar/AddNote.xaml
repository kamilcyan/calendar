<Window x:Class="Calendar.AddNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="AddNote" Height="200" Width="200">
    <Grid>
        <TextBox x:Name="AddNoteT" Height="120" Width="150" />
        <Button x:Name="confirmButton" Content="Confirm" Height="20" Width="150" VerticalAlignment="Bottom" Margin="0,0,0,5" Click="ConfirmButton_Click"/>
    </Grid>
</Window>
