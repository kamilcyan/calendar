<Window x:Class="Calendar.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="CalendarWindow" Height="450" Width="200">
    <Grid>
        <StackPanel Width="170">
        <DatePicker Name="dpick"  FirstDayOfWeek="Monday" SelectedDateFormat="Short"
                SelectedDateChanged="dpick_SelectedDateChanged"/>
            <TextBlock Name="dpText" Margin="0,30,0,0" MouseDown="DpText_MouseDown"/>
            <TextBlock Name="Text" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
